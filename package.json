{
  "name": "vimond-replay",
  "version": "1.0.0",
  "author": "Tor Erik AlrÃ¦k",
  "license": "UNLICENSED",
  "publishConfig": {
    "registry": "https://vimond.jfrog.io/vimond/api/npm/npm-local/"
  },
  "main": "lib/index.js",
  "files": [
    "lib",
    "guide.md",
    "README.md"
  ],
  "scripts": {
    "start": "PORT=3033 SKIP_PREFLIGHT_CHECK=true react-scripts start",
    "build:lib": "npm run build:es5 && npm run build:flow && npm run build:css",
    "build:es5": "babel src/replay -d lib --copy-files --source-maps",
    "build:flow": "flow-copy-source src/replay lib",
    "build:css": "postcss src/replay/replay-default.css -o lib/index.css",
    "docz:dev": "docz dev",
    "docz:build": "docz build",
    "test": "SKIP_PREFLIGHT_CHECK=true react-scripts test --env=jsdom"
  },
  "dependencies": {
    "hls.js": "^0.11.0",
    "memoize-one": "^4.0.0",
    "react-feather": "^1.1.0",
    "rx-player": "^3.9.2",
    "shaka-player": "^2.5.0-beta"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/plugin-proposal-class-properties": "^7.1.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-flow": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "css-loader": "^1.0.0",
    "docz": "^0.12.9",
    "docz-plugin-css": "^0.11.0",
    "docz-theme-default": "^0.12.9",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "1.5.0",
    "enzyme-to-json": "^3.3.4",
    "flow-bin": "0.85.0",
    "flow-copy-source": "^1.3.0",
    "postcss-cli": "^5.0.0",
    "postcss-import": "^11.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^5.1.0",
    "postcss-url": "^7.3.2",
    "prettier": "^1.12.1",
    "react": "16.5.0",
    "react-dom": "16.5.0",
    "react-persist": "^1.0.2",
    "react-scripts": "^2.1.1",
    "style-loader": "^0.22.1",
    "test-cli": "^0.1.0"
  },
  "prettier": {
    "printWidth": 120,
    "singleQuote": true,
    "parser": "flow",
    "jsxBracketSameLine": true
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
